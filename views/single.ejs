 
    <%- include('./partials/header.ejs') %> 
    <%- include('./partials/nav.ejs') %> 

<div class="container">
    
        <h1>Single Blog</h1>
         
        <h1><%= blog.title %> </h1>
        <p><%= blog.body%> </p>
        <a class="view" id="del" data-doc="<%= blog._id%>">DeleteE</a>
</div>
<script>

const trash=document.getElementById("del")
const endpoint=`/blogs/${trash.dataset.doc}`
trash.onclick=()=>{

 fetch(endpoint,{
    method:"DELETE"
 })
 .then(res=>res.json())
 .then(data=>window.location.href=data.redirect)
 .catch(err=>console.log(err))
}


</script>
</body>
</html>